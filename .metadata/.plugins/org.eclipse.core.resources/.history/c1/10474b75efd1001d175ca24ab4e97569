
public class Ex08_Oper {
	public static void main(String[] args) {
		//비교 연산자: 조건문에 많이 사용된다.
		//조건: 어떤 식이 참인지 또는 거짓인를 판단하는것
		//id와 pw 가 내가 입력한값과 DB에 있는 값이 일치하는지?
		//"아이디 또는 비밀번호를 확인하세요"
		// 조건은 반드시 true 와 false 의 답을 얻을수 있어야 한다.
		int num1=10, num2=10;
		//이상, 이하, 초과, 미만, 같다, 같지않다
		// 조건식을 사용하고 나서는 경과가 반드시 true , false 가 나온다.
		boolean result1 = num1 == num2; //true
		boolean result2 = num1 != num2; // false
		boolean result3 = num1 <= num2; // true
		
	
	}

}
